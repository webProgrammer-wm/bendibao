}

/* 箭头样式封装 */
.arrow {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.arrow::after {
    content: "";
    width: 15rpx;
    height: 15rpx;
    border-top: 3rpx solid #ccc;
    border-right: 3rpx solid #ccc;
    display: block;
    transform: rotate(45deg);
}

.cell-item {
    font-size: 14px;
    padding: 20rpx 30rpx;
    border-bottom: 1rpx solid #eee;
}